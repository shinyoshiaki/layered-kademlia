{
  "name": "typescript",
  "version": "0.0.1",
  "main": "lib/index.js",
  "files": [
    "lib",
    "src"
  ],
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "test": "npm run type && jest --forceExit",
    "ci": "npm run type && jest --runInBand --forceExit",
    "type": "tsc --noEmit --project ./tsconfig.json",
    "publish": "npm publish --access=public",
    "start": "ts-node --project ./tsconfig.json ./src/index.ts",
    "react": "cd examples/react && npm run start",
    "express": "cd examples/express && npm run server"
  },
  "dependencies": {
    "@msgpack/msgpack": "^1.9.3",
    "get-port": "^5.0.0",
    "kad-distance": "git+https://git@github.com/shinyoshiaki/kad-distance.git",
    "rx.mini": "^0.1.0",
    "sha1": "^1.1.1",
    "webrtc4me": "^0.8.1",
    "wrtc": "^0.4.2"
  },
  "devDependencies": {
    "@types/jest": "^23.3.13",
    "@types/node": "^11.13.6",
    "@types/sha1": "^1.1.2",
    "jest": "^23.6.0",
    "prettier": "^1.19.1",
    "ts-jest": "^23.10.5",
    "ts-node": "^8.3.0",
    "tslib": "^1.9.3",
    "typescript": "^3.7.2"
  },
  "jest": {
    "preset": "ts-jest",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/*.test.ts"
    ]
  }
}
